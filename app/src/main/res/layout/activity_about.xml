<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/included_toolbar"
            layout="@layout/toolbar" />

        <TextView
            style="@style/LargeDarkGrayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="@dimen/activity_large_vertical_margin"
            android:paddingStart="@dimen/padding_default"
            android:paddingEnd="@dimen/padding_default"
            android:text="@string/activity_about_full_text"
            android:justificationMode="inter_word"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/included_toolbar"
            tools:targetApi="o" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_large_vertical_margin"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/about_im1"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/ufms_logo_negativo_rgb"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/about_im2"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/fabrica_logo"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/about_im3"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/grafo_facom"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>