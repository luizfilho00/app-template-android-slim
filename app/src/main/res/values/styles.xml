<resources>

    <!-- themes -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="colorControlNormal">@color/controlNormal</item>
        <item name="android:windowBackground">@color/lightWindowBg</item>
    </style>

    <style name="AppTheme.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.NoActionbar.TranslucentStatusBar">
        <!-- written in v21 -->
    </style>

    <style name="AppTheme.NoActionbar.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.NoActionbar.TranslucentStatusBar.Login">
        <item name="colorControlNormal">@color/controlNormalLogin</item>
    </style>


    <!-- styles -->

    <style name="ButtonDark" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:background">@drawable/selector_button_accent</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:background">@drawable/selector_button_light</item>
    </style>

    <style name="ButtonTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorLightTextPrimary</item>
    </style>

    <style name="ButtonBorderlessStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">viewStart</item>

    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NormalDarkGrayText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="LargeDarkGrayText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="BigBoldDarkGrayText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>
</resources>